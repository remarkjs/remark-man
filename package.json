{
  "name": "remark-man",
  "version": "5.0.0",
  "description": "Compile Markdown to man pages (roff) with remark",
  "license": "MIT",
  "keywords": [
    "markdown",
    "man",
    "manual",
    "roff",
    "ronn",
    "remark"
  ],
  "repository": "https://github.com/wooorm/remark-man",
  "bugs": "https://github.com/wooorm/remark-man/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "dependencies": {
    "github-slugger": "^1.1.1",
    "groff-escape": "^1.0.0",
    "mapz": "^1.0.0",
    "mdast-util-to-string": "^1.0.0",
    "months": "^1.0.1",
    "unist-util-visit": "^1.0.0",
    "zwitch": "^1.0.0"
  },
  "files": [
    "lib",
    "index.js"
  ],
  "devDependencies": {
    "browserify": "^14.0.0",
    "esmangle": "^1.0.0",
    "is-hidden": "^1.0.1",
    "negate": "^1.0.0",
    "nyc": "^10.0.0",
    "remark": "^7.0.0",
    "remark-cli": "^3.0.0",
    "remark-preset-wooorm": "^2.0.0",
    "tape": "^4.4.0",
    "vfile": "^2.0.0",
    "xo": "^0.18.0"
  },
  "scripts": {
    "build-md": "remark *.md -qfo",
    "build-bundle": "browserify index.js -s remarkMan > remark-man.js",
    "build-mangle": "esmangle remark-man.js > remark-man.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "rules": {
      "guard-for-in": "off"
    },
    "ignores": [
      "remark-man.js"
    ]
  },
  "remarkConfig": {
    "plugins": ["preset-wooorm"]
  }
}
